@model Product
<div class="col-md-4 col-xl-3 col-sm-12 my-2">
    <div class="card" style="width: 18rem;">
        <img src="/images/default.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.ProductPrice.ToString("c")</p>
            <a style="width:100%;" class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductId">
                <i class="fa fa-info-circle"></i>
                Get Details
            </a>
        </div>
    </div>
</div>